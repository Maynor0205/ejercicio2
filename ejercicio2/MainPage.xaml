<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ejercicio2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="DarkCyan" Padding="24" CornerRadius="0">
            <Label Text="Bienvenido" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Registro" FontSize="Title" Padding="130,10,30,10" BackgroundColor="Beige" TextColor="Black"/>
        <Entry x:Name="txtnombre" Placeholder="Ingrese su nombre: "  Keyboard="Text" />
        <Entry x:Name="txtapellido" Placeholder="Ingrese su apellido: "  Keyboard="Text" />
        <Entry x:Name="txtedad" Placeholder="Ingrese su edad: "  Keyboard="Numeric" />
        <Entry x:Name="txtacorreo" Placeholder="Ingrese su correo: "  Keyboard="Email" />

        <Button x:Name="btnprocesar" Text="Procesar" Clicked="btnprocesar_Clicked" BackgroundColor="DarkCyan" />


      
    </StackLayout>

</ContentPage>
